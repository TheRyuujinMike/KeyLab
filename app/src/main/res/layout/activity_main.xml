<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.temple.keylab.MainActivity">

    <Button
        android:id="@+id/generateKey"
        android:text="GENERATE KEY"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/inputText"
        android:text="Text to Encrypt/Decrypted Text"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/generateKey"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/encryptButton"
        android:text="ENCRYPT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/inputText"/>

    <Button
        android:id="@+id/decryptButton"
        android:text="DECRYPT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/encryptButton"/>

    <EditText
        android:id="@+id/resultText"
        android:text="Text to Decrypt/Encrypted Text"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textAlignment="center"
        android:layout_below="@+id/decryptButton"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>
